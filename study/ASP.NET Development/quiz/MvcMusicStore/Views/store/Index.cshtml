@model IEnumerable<MvcMusicStore.Models.Album>

<h2>Albums</h2>

<table class="table">
    <tr>
        <th>Title</th>
        <th>Genre</th>
        <th>Price</th>
        <th>Description</th>
    </tr>

    @foreach (var album in Model)
    {
        <tr>
            <td>@album.Title</td>
            <td>@album.Genre.Name</td>
            <td>@album.Price</td>
            <td>@album.Description</td>
        </tr>
    }
</table>
