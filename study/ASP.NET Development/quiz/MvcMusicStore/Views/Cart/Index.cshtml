@model IEnumerable<MvcMusicStore.Models.CartItem>

<h2>Shopping Cart</h2>

<table class="table">
    <tr>
        <th>Product</th>
        <th>Quantity</th>
        <th>Price</th>
        <th>Total</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Product.Name</td>
            <td>@item.Quantity</td>
            <td>@item.Product.Price</td>
            <td>@(item.Quantity * item.Product.Price)</td>
        </tr>
    }
</table>
